BootStrap: docker
From: ubuntu:16.04
%post
	echo "Installing extra packages..."
    apt-get -y update
    apt-get -y install python3-pip
    apt-get update
    pip3 install ovation>=1.20.1
%runscript
	echo "$1"
	echo "$2"
	mkdir -p $2
	python3 -m ovation.cli -u "$1" download "$2" --output /data/$2
	