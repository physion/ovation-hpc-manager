    mkdir /outputs
    chmod 777 /outputs
    
    # Contents of Ovation Activity's "inputs"
    mkdir /inputs
    chmod 777 /inputs
    
    # Contents of Ovation Activity's "associated files"
    mkdir /related
    chmod 777 /related
    
