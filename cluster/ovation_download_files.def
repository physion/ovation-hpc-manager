BootStrap: docker
From: ubuntu:16.04
%post
	echo "Installing extra packages..."
    apt-get -y update
    apt-get -y install python3-pip
    apt-get update
    pip3 install ovation==1.22.0
    mkdir /local
    chmod 777 /local
%runscript
    API_TOKEN=$1
    ACTIVITY_UUID=$2
    OVATION_CLI_ARGS=$3
	mkdir -p /local/ovation/data/$ACTIVITY_UUID/
	python3 -m ovation.cli -t "$API_TOKEN" download "$ACTIVITY_UUID" --output /local/ovation/data/$ACTIVITY_UUID/ $OVATION_CLI_ARGS

